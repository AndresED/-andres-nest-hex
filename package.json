{
  "name": "@andres30xed/nest-hex",
  "version": "0.5.4",
  "description": "CLI tool that generates NestJS scaffolding using Hexagonal Architecture and CQRS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "nest-hex": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AndresED/-andres-nest-hex"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc && node scripts/copy-templates.js && node scripts/add-shebang.js",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nestjs",
    "cli",
    "hexagonal-architecture",
    "cqrs",
    "scaffolding",
    "generator"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.12",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
